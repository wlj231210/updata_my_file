.login {
  width: 80%;
  margin: 50% auto;
}
.login .head1 {
  border-radius: 50%;
  margin: auto;
  margin-bottom: 100rpx;
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
}
.login .head1 image {
  width: 200rpx;
  height: 200rpx;
}
.login .uni-form-item {
  position: relative;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  border-radius: 4rpx;
}
.login .uni-form-item .title {
  line-height: 0;
  position: absolute;
  left: 18rpx;
  font-size: 44rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #eeeeee;
}
.login .uni-form-item input {
  padding: 14rpx 14rpx 14rpx 70rpx;
  background-color: #000032;
  color: #eeeeee;
  border-radius: 4rpx;
  font-size: 26rpx;
}
.login .uni-btn-v {
  margin-top: 50rpx;
}
.login .uni-btn-v button {
  line-height: 70rpx;
  font-size: 26rpx;
  height: 70rpx;
  color: #FFFFFF;
  background-color: #BB7B8B;
  border-radius: 35rpx;
}
.login .select-login {
  background-color: #FFFFFF;
  padding: 20rpx;
}
.login .select-login .title1 {
  padding-bottom: 20rpx;
  display: block;
}
.login .select-login ._select {
  font-size: 24rpx;
  border: 1px solid #ddd;
  padding: 5px;
}

